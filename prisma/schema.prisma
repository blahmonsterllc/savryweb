// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  tier          UserTier  @default(FREE)
  weeklyBudget  Float?    // User's weekly grocery budget
  monthlyBudget Float?    // User's monthly grocery budget
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  recipes       Recipe[]
  mealPlans     MealPlan[]
  groceryLists  GroceryList[]
  savedRecipes  SavedRecipe[]
  recipeLikes   RecipeLike[]
  recipeViews   RecipeView[]
  favoriteMealPlans FavoriteMealPlan[]
  budgetEntries BudgetEntry[]
  
  @@map("users")
}

enum UserTier {
  FREE
  PRO
}

model Recipe {
  id            String    @id @default(cuid())
  userId        String?
  name          String
  description   String?
  ingredients   Json      // Array of ingredients
  instructions  Json      // Array of steps
  prepTime      Int?      // in minutes
  cookTime      Int?      // in minutes
  servings      Int?
  calories      Int?
  difficulty    String?
  cuisine       String?
  dietaryTags   String[]  // vegetarian, vegan, gluten-free, etc.
  imageUrl      String?
  source        RecipeSource @default(GENERATED)
  autoGenerated Boolean   @default(true)
  isPublic      Boolean   @default(false)
  usageCount    Int       @default(0) // Track how many times this recipe is used
  likesCount    Int       @default(0) // Track total likes
  viewsCount    Int       @default(0) // Track total views
  estimatedCost Float?    // Estimated cost to make this recipe
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedBy       SavedRecipe[]
  mealPlanRecipes MealPlanRecipe[]
  likes         RecipeLike[]
  views         RecipeView[]
  
  @@index([userId])
  @@index([usageCount])
  @@index([likesCount])
  @@index([viewsCount])
  @@index([isPublic])
  @@map("recipes")
}

enum RecipeSource {
  GENERATED
  USER_CREATED
  COMMUNITY
}

model SavedRecipe {
  id        String   @id @default(cuid())
  userId    String
  recipeId  String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, recipeId])
  @@map("saved_recipes")
}

model MealPlan {
  id            String    @id @default(cuid())
  userId        String
  name          String
  startDate     DateTime
  endDate       DateTime
  budget        Float?    // For budgeted meal plans (Pro tier)
  totalCost     Float?    // Calculated total cost
  actualCost    Float?    // Actual cost after shopping
  isCompleted   Boolean   @default(false) // Did user complete this meal plan?
  rating        Int?      // User rating 1-5 stars
  notes         String?   // User notes about what worked/didn't work
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipes       MealPlanRecipe[]
  groceryList   GroceryList?
  favoritedBy   FavoriteMealPlan[]
  
  @@index([userId])
  @@index([isCompleted])
  @@map("meal_plans")
}

model MealPlanRecipe {
  id          String    @id @default(cuid())
  mealPlanId  String
  recipeId    String
  dayOfWeek   Int       // 0-6 (Sunday-Saturday)
  mealType    MealType
  createdAt   DateTime  @default(now())
  
  mealPlan    MealPlan  @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  recipe      Recipe    @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  @@map("meal_plan_recipes")
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}

model GroceryList {
  id          String    @id @default(cuid())
  userId      String
  mealPlanId  String?   @unique
  name        String
  items       Json      // Array of {name, quantity, unit, category, price?, store?, aisle?, section?}
  totalCost   Float?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  mealPlan    MealPlan? @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("grocery_lists")
}

model StoreItemLocation {
  id          String    @id @default(cuid())
  storeName   String
  storeChain  String    // "Kroger", "Safeway", etc.
  location    String    // zip code or city
  itemName    String
  category    String
  aisle       String    // "Aisle 5"
  section     String    // "Dairy", "Produce", etc.
  shelfLocation String? // "Top shelf", "Bottom right", etc.
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([storeName, location, itemName])
  @@index([storeChain, location])
  @@index([itemName])
  @@map("store_item_locations")
}

model SupermarketDiscount {
  id          String    @id @default(cuid())
  storeName   String
  itemName    String
  category    String?
  originalPrice Float
  discountPrice Float
  discountPercent Float
  validFrom   DateTime
  validUntil  DateTime
  location    String?   // zip code or city
  createdAt   DateTime  @default(now())
  
  @@index([validUntil])
  @@index([storeName])
  @@index([location])
  @@map("supermarket_discounts")
}

// Social Features
model RecipeLike {
  id        String   @id @default(cuid())
  userId    String
  recipeId  String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, recipeId])
  @@index([recipeId])
  @@map("recipe_likes")
}

model RecipeView {
  id        String   @id @default(cuid())
  userId    String
  recipeId  String
  viewedAt  DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  @@index([recipeId])
  @@index([userId])
  @@map("recipe_views")
}

model FavoriteMealPlan {
  id          String   @id @default(cuid())
  userId      String
  mealPlanId  String
  notes       String?  // Why this meal plan worked well
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mealPlan    MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  
  @@unique([userId, mealPlanId])
  @@map("favorite_meal_plans")
}

// Budget Tracking
model BudgetEntry {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  category    String   // "groceries", "dining_out", etc.
  description String?
  date        DateTime
  type        BudgetType
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([date])
  @@map("budget_entries")
}

enum BudgetType {
  PLANNED
  ACTUAL
}

